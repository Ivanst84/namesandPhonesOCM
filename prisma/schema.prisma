datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String   @id @default(uuid())  // Cambiar Int a String
  email          String    @unique
  password       String
  name           String?
  role           Role      @default(USER)
  passwordExpiry DateTime  @default(now())
  createdAt      DateTime  @default(now())
}

enum Role {
  ADMIN
  USER
}
